# Production Environment Configuration
# iconicdigital.com থেকে data sync করার জন্য

# Admin Panel API Configuration (আপনার AdminPanelClone backend)
ADMIN_API_BASE=https://iconicdigital.com/api
ADMIN_AUTH_HEADER=Bearer your-admin-api-key-here

# User Frontend API Configuration (iconic-digital-frontend - production)
USER_API_BASE=https://iconicdigital.com/api
USER_AUTH_HEADER=Bearer your-user-api-key-here

# Sync Service Configuration
SYNC_BATCH_SIZE=100
SYNC_MODE=dry-run
SYNC_PORT=3002
SYNC_SECRET=your-secure-production-secret-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://iconicdigital:iconicdigital@iconicdigital.t5nr2g9.mongodb.net/?retryWrites=true&w=majority&appName=iconicdigital

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=2000

# Rate Limiting (production এ একটু বেশি delay)
RATE_LIMIT_DELAY_MS=200

# Backend Server URL
BACKEND_URL=https://iconicdigital.com

# Production Settings
NODE_ENV=production
LOG_LEVEL=info
